<% if notice %>
  <div data-alert class="alert-box info radius">
    <%= notice %>
  <a href="#" class="close">&times;</a>
</div>
<% end %>

  <div class="row">
    <div class="large-5 columns">
      <p>
        <%= image_tag @product.item_number.to_s + ".jpg", width: 500 %>
      </p>
    </div>
    <div class="large-5 pull-2 columns">
    <br />
    <p><%= button_to 'Buy', line_items_path(product_id: p), :class => 'button round tiny right' %></p>
      <h4><%= @product.name %></h4>
      <p> 
        Item ID: <%= @product.item_number %> | <%= number_to_currency @product.price %>
      </p> 

      <p>
        <strong>Collection:</strong>
        <% if @product.collection == 1 %>
          Dickens' Village
        <% else %>
          Downton Abbey 
        <% end %> 
      </p>
      <p><a href="#" data-reveal-id="myModal">Full-size image <i class="fi-arrows-out"></i></a></p>
    </div>
  </div>
  <div id="myModal" class="reveal-modal" data-reveal>
    <h2><%= @product.name %></h2>
    <p class="lead">
      Item ID: <%= @product.item_number %> | <%= number_to_currency @product.price %>

    </p>
    <%= image_tag @product.item_number.to_s + ".jpg" %>
    <a class="close-reveal-modal">&#215;</a>
  </div>