<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="large-5 columns">
      <p>
        <%= image_tag @product.item_number.to_s + ".jpg", width: 500 %>
      </p>
      
      <div id="myModal" class="reveal-modal" data-reveal>
        <h2><%= @product.name %></h2>
        <p class="lead">
          Item ID: <%= @product.item_number %> | <%= number_to_currency @product.price %>
        </p>
        <%= image_tag @product.item_number.to_s + ".jpg" %>
        <a class="close-reveal-modal">&#215;</a>
      </div>
    </div>
    <div class="large-5 pull-2 columns">
    <br />
      <h3><%= link_to @product.name, p %></h3>
      <p> 
        Item ID: <%= @product.item_number %> | <%= number_to_currency @product.price %>
      </p> 
      <p>
        <strong>Collection:</strong>
        <% if @product.collection == 1 %>
          Dickens' Village
        <% else %>
          Downton Abbey 
        <% end %> 
      </p>
      <p><a href="#" data-reveal-id="myModal">Expand Image</a></p>
      <p><%= button_to 'Add to Cart', line_items_path(product_id: @product), :class => 'button small' %></p>
    </div>
  </div>

